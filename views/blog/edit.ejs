<% layout('layouts/boilerplate')%>
<form action="/post/<%= post._id %>/?_method=PUT" method="post" enctype="multipart/form-data" class="validated-form>
  <div class="mb-3">
    <label for="title" class="form-label">Title of Your Post</label>
    <input
    value="<%= post.title %>"
      type="text"
      class="form-control"
      id="title"
      placeholder="title"
      name="title"
      required
    />
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea 
      class="form-control"
      id="description"
      rows="5"
      name="description"
      
      required
    ><%= post.description %></textarea>
  </div>
  <div class="mb-3">
    <label for="image" class="form-label">Choose your Blog post image</label>
    <input class="form-control" type="file" id="image" name="image" />
  </div>
  <button
    class="btn btn-primary w-100 text-center"
    type="submit"
    style="font-size: 24px"
  >
    Save
  </button>
</form>
